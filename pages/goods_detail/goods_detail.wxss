page{
    padding-bottom: 90rpx;
}
swiper{
    height: 70vw;
    text-align: center;
}

image{
    width: 60%;
}

.goods_price{
    padding: 15rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: var(--themeColor);
}
.goods_name_row{
    display: flex;
    align-content: center;
    justify-content: center;
    border-top: 5px solid #dedede;
    border-bottom: 5px solid #dedede;
    padding: 10rpx 0;
}
.goods_name{
    flex: 5;
    color: black;
    font-size: 30rpx;
    padding: 0px 10rpx;

}
.goods_collect{
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-left: 1px  solid black;
}
.goods_info_title{
    font-size: 32rpx;
    font-weight: bold;
    color: var(--themeColor);
    padding: 20rpx;
}
.btm_tool{
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    background-color: white;
    display: flex;
    width: 100%;
    height: 90rpx;
    border-top: 1px solid #ccc;
}
.tool_item{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding: 10px 0;
    font-size: 24rpx;
    position: relative;
}
.tool_item button{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}
.btn_cart{
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background-color: #ffa500;
    color: white;
    font-weight: bold;
    font-size: 30rpx;
}
.btn_buy{
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background-color: var(--themeColor);
    color: white;
    font-weight: bold;
    font-size: 30rpx;
}